VITE_ENABLE_GOOGLE_PAY=true

# Database Configuration
VITE_DB_HOST=localhost
VITE_DB_PORT=5432
VITE_DB_NAME=brand_ecommerce
VITE_DB_USER=admin
VITE_DB_PASSWORD=secure_password_123

# Email Services
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=noreply@brandecommerce.com
VITE_SMTP_PASSWORD=your_email_password
VITE_FROM_EMAIL=Brand Store <noreply@brandecommerce.com>

# Cloud Storage
VITE_AWS_ACCESS_KEY_ID=AKIA1234567890ABCDEF
VITE_AWS_SECRET_ACCESS_KEY=your_aws_secret_key
VITE_AWS_REGION=us-east-1
VITE_AWS_S3_BUCKET=brand-ecommerce-assets

# Analytics & Tracking
VITE_GOOGLE_ANALYTICS_ID=GA-123456789-1
VITE_FACEBOOK_PIXEL_ID=123456789012345
VITE_HOTJAR_ID=1234567
VITE_ENABLE_ANALYTICS=true

# Social Media Integration
VITE_FACEBOOK_APP_ID=123456789012345
VITE_TWITTER_API_KEY=your_twitter_api_key
VITE_INSTAGRAM_ACCESS_TOKEN=your_instagram_token

# Feature Flags
VITE_ENABLE_WISHLIST=true
VITE_ENABLE_REVIEWS=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=false
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=false

# Shipping & Logistics
VITE_SHIPPING_API_KEY=your_shipping_api_key
VITE_DEFAULT_SHIPPING_COST=10.00
VITE_FREE_SHIPPING_THRESHOLD=100.00
