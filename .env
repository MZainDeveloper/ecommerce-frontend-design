# Payment Gateways
VITE_STRIPE_PUBLIC_KEY=pk_test_51234567890abcdef
VITE_STRIPE_SECRET_KEY=sk_test_51234567890abcdef
VITE_PAYPAL_CLIENT_ID=AYourPayPalClientId123
VITE_PAYPAL_CLIENT_SECRET=EYourPayPalClientSecret456
