VITE_SUPPORTED_CURRENCIES=USD,EUR,GBP,CAD,JPY,CNY

# Performance & Caching
VITE_CACHE_DURATION=3600
VITE_IMAGE_OPTIMIZATION=true
VITE_LAZY_LOADING=true
VITE_CDN_URL=https://cdn.brandecommerce.com

# Development Settings
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info
VITE_ENABLE_MOCK_DATA=true
VITE_API_TIMEOUT=30000

# Production Settings (for deployment)
VITE_PROD_API_URL=https://api.brandecommerce.com
VITE_PROD_CDN_URL=https://cdn.brandecommerce.com
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_MINIFICATION=true